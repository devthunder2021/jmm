---
// layout
import MainLayout from "../layouts/MainLayout.astro";
// link component
import Link from "../components/Link.astro";
// astro image
import { Image } from "astro:assets";
// images
import error from "../images/404/error-404.png";
---

<MainLayout title="404 - Page Not Found">
  <section class="flex flex-col items-center justify-items-center gap-6 pt-10">
    <Image
      src={error}
      alt="404"
      format="webp"
      height={250}
      width={250}
      loading={"eager"}
    />
    <h1 class="text-5xl">Page Not Found</h1>
    <p class="text-lg">
      Sorry, we couldn't find the page you were looking for.
    </p>
    <button>
      <Link
        href="/"
        text="Go Back Home"
        icon={{ name: "arrow-back", side: "left" }}
        isFilled
        borderVisible
      />
    </button>
  </section>
</MainLayout>
